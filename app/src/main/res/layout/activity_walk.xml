<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.example.android.sfwhf1.WalkActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/walking"
            android:layout_marginRight="8dp"
            tools:ignore="ContentDescription"
            android:layout_marginLeft="8dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/w_duration"
            android:layout_width="296dp"
            android:layout_height="44dp"
            android:ems="10"
            android:hint="Enter Duration in min"
            android:inputType="number"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            tools:ignore="HardcodedText"
            android:textSize="20dp"
            android:layout_marginBottom="16dp" />

        <ImageButton
            android:id="@+id/w_submit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/w_duration"
            android:background="@drawable/submit" />


        <TextView
            android:id="@+id/w_calView"
            android:layout_width="293dp"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/w_submit"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/aerobicsmenu"
            android:layout_below="@+id/w_calView"
            android:layout_centerInParent="true" />


    </RelativeLayout>
</ScrollView>
