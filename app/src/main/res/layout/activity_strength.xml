<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.example.android.sfwhf1.StrengthActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/stregthView"
            android:layout_width="250dp"
            android:layout_height="175dp"
            app:srcCompat="@drawable/strengthimage"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/pushup"
            tools:ignore="ContentDescription"
            android:layout_centerHorizontal="true"
            app:layout_constraintVertical_bias="0.473" />

        <ImageButton
            android:id="@+id/pushup"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/stregthView"
            android:background="@drawable/pushupimg" />
        <ImageButton
            android:id="@+id/crunch"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/pushup"
            android:background="@drawable/crunchimg" />
        <ImageButton
            android:id="@+id/weightlift"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/crunch"
            android:background="@drawable/weightliftingimg" />


        <ImageButton
            android:id="@+id/back"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/workoutmenu"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/weightlift" />
    </RelativeLayout>
</ScrollView>

