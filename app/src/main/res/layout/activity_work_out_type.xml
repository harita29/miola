<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:layout_height="match_parent"
    tools:context="com.example.android.sfwhf1.WorkOutTypeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/workout_type"
            android:layout_margin="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <ImageButton
            android:id="@+id/aerobic"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/imageView"
            android:background="@drawable/aerobiclarge" />

        <ImageButton
            android:id="@+id/strength"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/aerobic"
            android:background="@drawable/strengthbtn"/>


        <ImageButton
            android:id="@+id/report"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/strength"
            android:background="@drawable/totalcaloryburnt" />


        <EditText
            android:id="@+id/userinput"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:layout_marginBottom="36dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:layout_below="@id/report"
            android:hint="Input Calorie Burnt"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/uSubmit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/submitsmall"
            android:layout_alignBottom="@+id/userinput"
            android:layout_toEndOf="@+id/userinput" />

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/uSubmit"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="BACK"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</ScrollView>
