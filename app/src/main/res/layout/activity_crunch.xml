<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.example.android.sfwhf1.CrunchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

 <ImageView
        android:id="@+id/crunchView"
        android:layout_width="292dp"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/crunchimage"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/c_duration"
            android:layout_width="296dp"
            android:layout_height="44dp"
            android:ems="10"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:hint="Enter how many times"
            android:inputType="number"
            android:layout_below="@id/crunchView"
             />

    <ImageButton
        android:id="@+id/c_submit"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/c_duration"
        android:background="@drawable/submit" />


    <TextView
        android:id="@+id/c_calView"
        android:layout_width="293dp"
        android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="20dp"
        android:layout_below="@id/c_submit"
        tools:ignore="HardcodedText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/aerobicsmenu"
            android:layout_below="@+id/c_calView"
            android:layout_centerInParent="true" />


    </RelativeLayout>
</ScrollView>
