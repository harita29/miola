<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.example.android.sfwhf1.WeightLiftingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/weightliftView"
            android:layout_width="286dp"
            android:layout_height="216dp"
            app:srcCompat="@drawable/weightlifting"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            tools:ignore="ContentDescription"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp" />
        <EditText
            android:id="@+id/we_duration"
            android:layout_width="296dp"
            android:layout_height="44dp"
            android:ems="10"
            android:hint="Enter how many times"
            android:inputType="number"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/weightliftView"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_marginLeft="8dp"
            tools:ignore="HardcodedText,MissingConstraints"
            android:layout_marginBottom="16dp"/>

        <ImageButton
            android:id="@+id/we_submit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:layout_below="@+id/we_duration"
            android:background="@drawable/submit" />
        <TextView
            android:id="@+id/we_calView"
            android:layout_width="293dp"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/we_submit"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/aerobicsmenu"
            android:layout_below="@+id/we_calView"
            android:layout_centerInParent="true" />

    </RelativeLayout>
</ScrollView>
