<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.example.android.sfwhf1.PushupActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/pushupView"
            android:layout_width="250dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/pushup"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            tools:ignore="ContentDescription"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            />
        <EditText
            android:id="@+id/p_duration"
            android:layout_width="296dp"
            android:layout_height="44dp"
            android:ems="10"
            android:hint="Enter how many times"
            android:inputType="number"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="HardcodedText,MissingConstraints"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/pushupView"
            android:layout_centerHorizontal="true"
            app:layout_constraintBottom_toTopOf="@+id/p_submit" />

        <ImageButton
            android:id="@+id/p_submit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/p_duration"
            android:background="@drawable/submit" />


        <TextView
            android:id="@+id/p_calView"
            android:layout_width="293dp"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/p_submit"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/aerobicsmenu"
            android:layout_below="@+id/p_calView"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</ScrollView>
