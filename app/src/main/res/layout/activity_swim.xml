<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.example.android.sfwhf1.SwimActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <ImageView
            android:id="@+id/s_imageView"
            android:layout_width="295dp"
            android:layout_height="210dp"
            app:srcCompat="@drawable/swim"
            android:layout_marginRight="8dp"
            tools:ignore="ContentDescription"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/s_duration"
            android:layout_width="296dp"
            android:layout_height="44dp"
            android:ems="10"
            android:hint="Enter Duration in min"
            android:inputType="number"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            tools:ignore="HardcodedText"
            android:textSize="20dp"
            android:layout_below="@+id/s_imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"/>

        <ImageButton
            android:id="@+id/s_submit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/s_duration"
            android:background="@drawable/submit" />

        <TextView
            android:id="@+id/s_calView"
            android:layout_width="293dp"
            android:layout_height="44dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="20dp"
            android:layout_below="@+id/s_submit"
            android:layout_centerHorizontal="true"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/aerobicsmenu"
            android:layout_below="@+id/s_calView"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</ScrollView>
